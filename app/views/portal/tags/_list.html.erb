
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>name</th>
            <th>status</th>
            <th>created</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        <% @tags.each do |t| %>
        <tr>
            <td><%= t.name %></td>
            <td><%= status_converter(tag.in_use?, truthy: 'in use', falsey: 'not in use') %> </td>
            <td><%= time_ago t.created_at %></td>
            <td>
                <%= link_to edit_portal_tag_url(tag) do %>
                    <button type="button">Cập nhật</button>
                <% end  %>
            </td>
            <td>
                <%= link_to edit_portal_tag_url(tag) do %>
                    <button type="button">Xóa</button>
                <% end  %>
            </td>
        </tr>
        <% end %>
    </tbody>

</table>