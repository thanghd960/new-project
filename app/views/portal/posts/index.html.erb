<h1>Portal::Posts#index</h1>
<p><%= link_to 'Tạo bài viết mới',new_portal_post_path %></p>
<p>
	<%= render 'search', route: portal_posts_path %>
</p>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Tiêu đề</th>
			<th>Publish</th>			
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
		<tr>
			<td><%= truncate(post.title, length: 60, separate: '') %></td>
            <td><%= status_converter(post.publish) %></td>
            <td>
                <%= link_to 'Cập nhật', edit_portal_post_path(post) %>
                <%= link_to 'Xem', portal_post_path(post) %>
                <%= link_to 'Xóa', portal_post_path(post), method: :delete, data: {confirm: 'Bạn có chắc muốn xóa bài viết không?'} %>
            </td>			
		</tr>
		<% end%>
	</tbody>
</table>
<%# <p><%= paginate @posts </p> %>
<p><%= will_paginate @posts %> </p>