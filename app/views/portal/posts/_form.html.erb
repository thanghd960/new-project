<%= form_for [:portal, @post] , html: { multipart: true } do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %><br>
    </p>
    <p>
        <%= f.label :content %><br>
        <%= f.cktext_area :content %><br>
    </p>
    <p>
        <%= f.label :publish %><br>
        <%= f.check_box :publish %><br>
    </p>
    <p>
        <%= f.select :tag_ids, Tag.all.collect {|t| [t.name, t.id]}, {prompt: 'Chá»n tag'}, multiple: :true %>       
    </p>
    <p>
        <%= f.file_field :image %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
<% end %>
