<h1>Portal::Posts#new</h1>

<%= form_for [:portal, @post] do |f| %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %><br>
    </p>
    <p>
        <%= f.label :content %><br>
        <%= f.text_field :content %><br>
    </p>
    <p>
        <%= f.label :publish %><br>
        <%= f.check_box :publish %><br>
    </p>
    <p>
        <%= f.select :tag_ids, Tag.all.collect {|t| [t.name, t.id]}, {prompt: 'Chọn tag'}, multiple: :true %>       
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
